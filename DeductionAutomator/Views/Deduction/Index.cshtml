@model DeductionViewModel

@{
  ViewData["Title"] = "Manage your employee deductions";
}

<div class="panel panel-default deduction-panel">
  <div class="panel-heading">@ViewData["Title"]</div>

  <table class="table table-hover">
    <thead>
      <tr>
        <td><strong>Employee Name:</strong></td>
        <td><strong>Deduction:</strong></td>
        <td><strong>Dependents:</strong></td>
      </tr>
    </thead>

    @foreach (var entry in Model.Deductions)
    {
      <tr>
        <td>@entry.EmployeeName</td>
        <td>@entry.YearlyDeduction</td>
        <td>@entry.Dependents</td>
        <td><button class="edit-button">Edit</button></td>
        <td><button class="delete-button">Delete</button></td>
      </tr>
    }
  </table>

  <div class="panel-footer add-item-form">
    @await Html.PartialAsync("AddDeductionEntryPartial", new DeductionEntry())
  </div>
</div>